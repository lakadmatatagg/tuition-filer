    "axios": "^1.9.0",
    "basic-ftp": "^5.0.5",
    "docxtemplater": "^3.61.1",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "googleapis": "^148.0.0",
    "multer": "^1.4.5-lts.2",
    "node-telegram-bot-api": "^0.66.0",
    "pizzip": "^3.1.8",
    "reflect-metadata": "^0.2.2",
